# Application Environment Configuration
# Copy this file to .env and update with your values

# Application Environment (development, production)
APP_ENV=development
APP_NAME=MyApp
APP_DEBUG=true
BASE_URL=http://localhost:8000

# Database Configuration
# Supported drivers: sqlite, pgsql (Supabase PostgreSQL)
DB_DRIVER=sqlite
SQLITE_DB_PATH=databaseapp.db

# For Supabase PostgreSQL (when DB_DRIVER=pgsql)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# DB_HOST=db.your-project.supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_PASSWORD=your-db-password

# Session Configuration
SESSION_LIFETIME=86400
SESSION_NAME=myapp_session

# Authentication
PASSWORD_MIN_LENGTH=6

# Authorization
# Comma-separated list of Super Admin email addresses
# Super Admins have full access to manage global entities
SUPER_ADMIN_EMAILS=sharma.yogesh.1234@gmail.com

# Add additional Super Admin emails like this:
# SUPER_ADMIN_EMAILS=admin1@example.com,admin2@example.com,admin3@example.com
